<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8sp"
    android:background="@color/bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg"
        android:backgroundTint="@color/brown2"
        android:orientation="horizontal"
        android:paddingVertical="4dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Pimg"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"

            android:scaleType="centerCrop"
            android:src="@drawable/error"
            app:shapeAppearanceOverlay="@style/card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="3sp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/title"
                android:textColor="@color/txt"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="8sp"
                android:text="@string/description"
                android:textColor="@color/txt"
                android:textSize="15sp"
                tools:layout_editor_absoluteY="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingVertical="2sp">


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="15sp"
                    android:drawablePadding="10sp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:text="@string/price"
                    android:textColor="@color/price"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/baseline_price_change_24"
                    app:drawableTint="@color/price"
                    tools:layout_editor_absoluteY="30dp" />


                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="5sp"
                    android:text="@string/rating"
                    android:textColor="@color/rating"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/baseline_star_rate_24"
                    app:drawableTint="@color/rating" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>